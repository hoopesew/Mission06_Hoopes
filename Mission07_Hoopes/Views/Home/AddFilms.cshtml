@{
    ViewData["Title"] = "Add Films";
}

@model MovieSubmission

<head>
    <style>
        .center_text {
            text-align: center;
        }
    </style>
</head>
<body>
    <h1 class= "center_text">Add Films to the Database</h1>
    <h4 class="center_text">I have a database linked to this website filled with 420 movies that I have seen, but I am always adding to this large film collection. Everytime that I watch a movie, I will add to this database by filling out the form below.</h4>

    <form method="post">
        <label asp-for="Category">Category:</label> <br />
        <input asp-for="Category" type="text" id="category" name="category" required ><br />

        <label asp-for="Title">Title:</label><br />
        <input asp-for="Title" type="text" id="title" name="title" required><br />

        <label asp-for="Year">Year:</label><br />
        <input asp-for="Year" type="text" id="year" name="year" required><br />

        <label asp-for="Director">Director:</label><br />
        <input asp-for="Director" type="text" id="director" name="director" required><br />

        <label asp-for="Rating">Rating:</label><br />
        <select asp-for = "Rating" required>
            <option value="">--Select a Rating--</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited">Edited:</label><br>
        <select asp-for = "Edited">
            <option value="True">Yes</option>
            <option value="False">No</option>
        </select>


        <label asp-for="Lent_To">Lent to:</label><br />
        <input asp-for="Lent_To"><br />

        <label asp-for="Notes">Notes:</label><br />
        <input asp-for="Notes" id="notes" name="notes" maxlength="25"><br /><br />

        <input type="submit" value="Submit">
    </form>

</body>
